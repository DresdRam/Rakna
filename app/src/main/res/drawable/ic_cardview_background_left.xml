<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/cardview_dark_background"
                android:endColor="@color/white"
                android:type="linear"/>
            <stroke android:color="@color/white"
                android:dashGap="10dp"
                android:dashWidth="10dp"
                android:width="3dp"/>
        </shape>
    </item>
    <item android:top="3dp" android:bottom="3dp" android:right="3dp" android:left="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/cardViewBackground"/>
            <gradient
                android:endColor="@color/white"
                android:startColor="@color/cardViewBackground" />
        </shape>
    </item>
</layer-list>